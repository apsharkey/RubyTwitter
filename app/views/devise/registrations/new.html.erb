<div id="signup_container">
<h2 class="whitetext">Sign up</h2><br />
Already a user? <%= link_to "Sign in", new_session_path(resource_name) %> or <%= link_to "Forgot your password?", new_password_path(resource_name) %>

<br />
<br />

<%= form_for(resource, :html => { :multipart => true }, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<div id="signup_attributes">
	
  <div id="signup_username">
  <span class="label_margin_right"><%= f.label :username %></span>
  <%= f.text_field :username, :class => "tb round" %><br />
  </div>
  <div id="signup_firstname">
  <span class="label_margin_right"><%= f.label :first_name %></span>
  <%= f.text_field :first_name, :class => "tb round" %><br />
  </div>
  <div id="signup_lastname">
  <span class="label_margin_right"><%= f.label :last_name %></span>
  <%= f.text_field :last_name, :class => "tb round" %><br />
  </div>
  <div id="signup_email">
  <span class="label_margin_right"><%= f.label :email %></span>
  <%= f.text_field :email, :class => "tb round" %><br />
  </div>
  <div id="signup_password">
  <span class="label_margin_right"><%= f.label :password %></span>
  <%= f.password_field :password, :class => "tb round" %><br />
  </div>
</div>

<br />



<br />

<div id="create_my_account">
  <br />
  <p><%= f.submit "Create my account" %></p>
</div>
<% end %>
</div>