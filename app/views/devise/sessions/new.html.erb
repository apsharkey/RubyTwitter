<h3 class="whitetext">Sign in</h3>

<div id="sign_in_form">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username, :class => "tb" %>
  <br />
  <%= f.label :password %>
  <%= f.password_field :password, :class => "tb"%>

  <div id="remember_me">
    <% if devise_mapping.rememberable? -%>
	  <%= f.check_box :remember_me %> <%= f.label :remember_me %>
    <% end -%>
  </div>


  <div id="sign_in">
  <p><%= f.submit "Sign in" %></p><br />
  <% end %>
  </div>

  <div id="shared_links">
  <p><%= render :partial => "devise/shared/links" %></p>
  </div>
</div>